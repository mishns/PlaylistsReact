{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "/dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["jest", "node", "@testing-library/jest-dom"],

    "baseUrl": "./",
    "paths": {
      "@constants/*": ["./src/constants.ts"],
      "@data/*": ["./src/data/*"],
      "@fonts/*": ["./src/fonts.ts"],
      "@api/*": ["./src/api/*"],
      "@pages/*": ["./src/pages/*"],
      "@ui/*": ["./src/ui/*"],
      "@public/*": ["./public/*"],
      "@root/*": ["./*"]
    }
  },
  "include": ["./src/**/*"]
}
